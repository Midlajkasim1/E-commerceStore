<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>User Management</title>
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css" rel="stylesheet">
    <link href="https://cdnjs.cloudflare.com/ajax/libs/bootstrap/5.3.2/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="/style/customers.css">
</head>
<body>
    <div class="container">
        <!-- Sidebar -->
        <div class="sidebar">
            <div class="logo">Urban row</div>
            <div class="nav-item active">
                <i class="fas fa-home"></i>
                Dashboard
            </div>
            <div class="nav-item">
                <i class="fas fa-box"></i>
                Product
            </div>
            <div class="nav-item">
                <i class="fas fa-shopping-cart"></i>
                Orders
            </div>
            <div class="nav-item">
                <i class="fas fa-users"></i>
                Users
            </div>
            <div class="nav-item">
                <i class="fas fa-list"></i>
                Categories
            </div>
            <div class="nav-item">
                <i class="fas fa-tag"></i>
                Offers
            </div>
            <div class="nav-item">
                <i class="fas fa-ticket-alt"></i>
                Coupon
            </div>
            <div class="nav-item">
                <i class="fas fa-cog"></i>
                Settings
            </div>
            <div class="nav-item logout">
                <i class="fas fa-sign-out-alt"></i>
                Logout
            </div>
        </div>

        <!-- Main Content -->
        <div class="main-content">
            <div class="header">
                <h1>Users</h1>
                <div class="search-bar">
                    <form action="/admin/users" method="get">
                        <input type="text" name="search" placeholder="Search users" value="<%= search %>">
                        <i class="fas fa-search"></i>
                    </form>
                </div>
                <div class="profile-container">
                    <img src="/images/admin-pro.jpeg" alt="Profile" class="profile-icon">
                    <button class="add-user-btn">ADD USER +</button>
                </div>
            </div>

            <table class="users-table">
                <thead>
                    <tr>
                        <th>USER NAME</th>
                        <th>EMAIL</th>
                        <th>Phone No</th>
                        <th>ACTION</th>
                    </tr>
                </thead>
                <tbody>
                    <% data.forEach(function(user) { %>
                    <tr>
                        <td><%= user.name %></td>
                        <td><%= user.email %></td>
                        <td><%= user.phone %></td>
                        <td>
                            <% if(user.isBlocked === false) { %>
                                <button class="btn btn-danger" style="width: 80px;">
                                    <a href="/admin/blockCustomer?id=<%= user._id %>" class="text-white" style="text-decoration: none;">Block</a>
                                </button>
                            <% } else { %>
                                <button class="btn btn-success" style="width: 80px;">
                                    <a href="/admin/unblockCustomer?id=<%= user._id %>" class="text-white" style="text-decoration: none;">Unblock</a>
                                </button>
                            <% } %>
                        </td>
                    </tr>
                    <% }) %>
                </tbody>
            </table>

            <div class="pagination">
                <span class="showing-text">SHOWING <%= data.length %> OF <%= totalPages * 10 %></span>
                <% for(let i = 1; i <= totalPages; i++) { %>
                    <div class="page-item <%= currentPage == i ? 'active' : '' %>">
                        <a href="/admin/users?page=<%= i %>"><%= i %></a>
                    </div>
                <% } %>
            </div>
        </div>
    </div>
</body>
</html>
