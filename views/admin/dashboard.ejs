        }

        .brand-name {
            color: white;
            font-size: 18px;
            margin-bottom: 30px;
            padding-left: 10px;
        }

        .nav-item {
            display: flex;
            align-items: center;
            color: #9CA3AF;
            padding: 10px;
            margin-bottom: 5px;
            border-radius: 6px;
            text-decoration: none;
        }

        .nav-item i {
            width: 20px;
            margin-right: 10px;
        }

