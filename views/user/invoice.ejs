<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <title>Invoice - Urban Row</title>
    <style>
        body {
            font-family: Arial, sans-serif;
            margin: 0;
            padding: 20px;
            color: #333;
        }
        .invoice-container {
            max-width: 800px;
            margin: 0 auto;
            border: 1px solid #eee;
            padding: 20px;
        }
        .header {
            text-align: center;
            margin-bottom: 30px;
        }
        .header img {
            max-width: 150px;
            height: auto;
        }
        .header h1 {
            color: #088178;
            margin: 10px 0;
        }
        .invoice-details {
            margin-bottom: 30px;
            border-bottom: 2px solid #eee;
            padding-bottom: 20px;
        }
        .invoice-details table {
            width: 100%;
        }
        .invoice-details td {
            padding: 5px 0;
        }
        .shipping-address {
            margin-bottom: 30px;
        }
        .product-table {
            width: 100%;
            border-collapse: collapse;
            margin-bottom: 30px;
        }
        .product-table th,
        .product-table td {
            border: 1px solid #ddd;
            padding: 10px;
            text-align: left;
        }
        .product-table th {
            background-color: #f8f9fa;
        }
        .total-section {
            float: right;
            width: 300px;
        }
        .total-table {
            width: 100%;
        }
        .total-table td {
            padding: 5px 0;
        }
        .total-table .grand-total {
            font-weight: bold;
            border-top: 2px solid #ddd;
            padding-top: 10px;
        }
        .text-right {
            text-align: right;
        }
        .row {
            display: flex;
            justify-content: space-between;
        }
    </style>
</head>
<body>
    <div class="invoice-container">
        <div class="header">
            <img src="images/logo.png" alt="Urban Row">
            <h1>Urban Row</h1>
        </div>

        <div class="invoice-details">
            <table>
                <tr>
                    <td><strong>Invoice</strong></td>
                    <td class="text-right"><strong>Order ID: </strong><%= order.orderId %></td>
                </tr>
                <tr>
                    <td>Order Date: <%= new Date(order.createOn).toLocaleDateString() %></td>
                    <td class="text-right">Invoice Date: <%= new Date().toLocaleDateString() %></td>
                </tr>
            </table>
        </div>

        <div class="shipping-address">
            <h3>Shipping Address</h3>
            <p>
                <%= order.shippingAddress.name %><br>
                <%= order.shippingAddress.landMark %><br>
                <%= order.shippingAddress.city %>, <%= order.shippingAddress.state %><br>
                <%= order.shippingAddress.pincode %><br>
                Phone: <%= order.shippingAddress.phone %>
            </p>
        </div>

        <div class="order-details">
            <h3>Order Details</h3>
            <table class="product-table">
                <thead>
                    <tr>
                        <th>Product</th>
                        <th>Size</th>
                        <th>Quantity</th>
                        <th>Price</th>
                        <th>Subtotal</th>
                    </tr>
                </thead>
                <tbody>
                    <% order.orderedItems.forEach(function(item) { %>
                    <tr>
                        <td><%= item.product.productName %></td>
                        <td><%= item.size %></td>
                        <td><%= item.quantity %></td>
                        <td class="text-right">₹<%= item.price.toFixed(2) %></td>
                        <td class="text-right">₹<%= (item.price * item.quantity).toFixed(2) %></td>
                    </tr>
                    <% }); %>
                </tbody>
            </table>
        </div>

        <div class="total-section">
            <table class="total-table">
                <tr>
                    <td>Total Products:</td>
                    <td class="text-right">₹<%= order.totalPrice.toFixed(2) %></td>
                </tr>
                <% if (order.discount > 0) { %>
                <tr>
                    <td>Discount:</td>
                    <td class="text-right" style="color: #28a745">-₹<%= order.discount.toFixed(2) %></td>
                </tr>
                <% } %>
                <tr>
                    <td>Shipping Charge:</td>
                    <td class="text-right">₹<%= order.shipping.toFixed(2) %></td>
                </tr>
                <tr class="grand-total">
                    <td>Grand Total:</td>
                    <td class="text-right">₹<%= order.finalAmount.toFixed(2) %></td>
                </tr>
            </table>
        </div>
    </div>
</body>
</html>