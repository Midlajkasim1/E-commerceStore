<body>
    <%-include("../../views/partials/user/header")%>

    <div class="container my-4">
        <!-- Breadcrumb -->
        <div class="breadcrumb">
            <a href="/">Home</a>
            <span>/</span>
            <a href="/orders">My Orders</a>
        </div>

        <div class="row mt-4">
            <!-- Sidebar (copied from profile page) -->
                <%-include("../../views/partials/user/profileSidebar")%>


            <!-- Orders Content -->
            <div class="col-lg-9">
                <div class="orders-card">
                    <h4 class="mb-4">My Orders</h4>
                    
                    <!-- Sample Order Item -->
                    <% if (orders && orders.length > 0) { %>
                        <% orders.forEach(function(order) { %>
                            <div class="card mb-3">
                                <div class="card-header d-flex justify-content-between align-items-center">
                                    <h5 class="mb-0">Order #<%= order.orderId %></h5>
                                    <span class="badge <%= order.statusClass %> order-status-badge">
                                        <%= order.status %>
                                    </span>
                                </div>
                                <div class="card-body">
                                    <div class="row">
                                        <!-- Order Items -->
                                        <div class="col-md-4">
                                            <% order.orderedItems.forEach(function(item) { %>
                                                <div class="d-flex mb-2">
                                                    <img 
                                                    src="<%= item.product.images && item.product.images.length > 0 ? item.product.images[0] : '/path/to/default/image.jpg' %>" 
                                                    alt="<%= item.product.name %>" 
                                                    class="img-thumbnail me-3" 
                                                    style="width: 80px; height: 80px; object-fit: cover;"
                                                >
                                                    <div>
                                                        <h6 class="mb-1"><%= item.product.name %></h6>
                                                        <p class="mb-0">
                                                            Qty: <%= item.quantity %> | 
                                                            Size: <%= item.size %> | 
                                                            ₹<%= item.price %>
                                                        </p>
                                                    </div>
                                                </div>
                                            <% }); %>
                                        </div>
            
                                        <!-- Order Tracking -->
                                        <div class="col-md-4">
                                            <h6>Order Tracking</h6>
                                            <div class="tracking-timeline">
                                                <% 
                                                const trackingSteps = [
                                                    { title: 'Order Placed', completed: true },
                                                    { title: 'Processing', completed: order.status !== 'Pending' },
                                                    { title: 'Shipped', completed: ['Shipped', 'Delivered'].includes(order.status) },
                                                    { title: 'Out for Delivery', completed: order.status === 'Delivered' },
                                                    { title: 'Delivered', completed: order.status === 'Delivered' }
                                                ];
                                                
                                                trackingSteps.forEach(function(step, index) { %>
                                                    <div class="tracking-item <%= step.completed ? 'completed' : '' %>">
                                                        <h6><%= step.title %></h6>
                                                    </div>
                                                <% }); %>
                                            </div>
                                        </div>
            
                    </div>


                     <!-- Order Details -->
                     <div class="col-md-4">
                        <h6>Order Summary</h6>
                        <p class="mb-1"><strong>Order Date:</strong> <%= order.formattedDate %></p>
                        <p class="mb-1"><strong>Total Amount:</strong> ₹<%= order.finalAmount %></p>
                        <% if (order.trackingInfo && order.trackingInfo.trackingNumber) { %>
                            <p class="mb-1">
                                <strong>Tracking Number:</strong> 
                                <%= order.trackingInfo.trackingNumber %>
                            </p>
                        <% } %>
                    </div>
                </div>
            </div>
        </div>
    <% }); %>
<% } else { %>
    <div class="alert alert-info">
        You have no orders yet.
    </div>
<% } %>
</div>
                
                </div>
            </div>





        </div>
    </div>
  </div>
  </div>
