    <script>
    document.addEventListener('DOMContentLoaded', () => {
    const orderDetailsModal = new bootstrap.Modal(document.getElementById('orderDetailsModal'));
    
    // Function to populate modal with order details
    function showOrderDetails(order) {
        // Populate product details
        document.getElementById('orderNumberDisplay').textContent = order.orderNumber;
        document.getElementById('productImage').src = order.productImage;
        document.getElementById('productName').textContent = order.productName;
        document.getElementById('productQuantity').textContent = order.quantity;
        document.getElementById('productSize').textContent = order.size;
        document.getElementById('productPrice').textContent = order.price.toLocaleString('en-IN');

        // Populate tracking timeline
        const timelineContainer = document.getElementById('trackingTimeline');
        timelineContainer.innerHTML = ''; // Clear previous content
        
        order.trackingSteps.forEach((step, index) => {
            const stepElement = document.createElement('div');
            stepElement.classList.add('tracking-item');
            
            // Add completed/pending classes based on order status
            if (index < order.currentStep) {
                stepElement.classList.add('completed');
            } else if (index === order.currentStep) {
                stepElement.classList.add('pending');
            }

            stepElement.innerHTML = `
                <h6>${step.title}</h6>
                <p class="text-muted">${step.timestamp || 'Not yet processed'}</p>
            `;

            timelineContainer.appendChild(stepElement);
        });

        // Populate shipping details
        document.getElementById('shippingAddress').innerHTML = `
            ${order.shippingName}<br>
            ${order.shippingAddress}<br>
            ${order.shippingCity}, ${order.shippingState} ${order.shippingPincode}<br>
            Contact: ${order.shippingPhone}
        `;
        document.getElementById('trackingNumber').textContent = order.trackingNumber;
        document.getElementById('courierName').textContent = order.courierName;

        // Show the modal
        orderDetailsModal.show();
    }

    // Attach event listeners to all view details buttons
    document.querySelectorAll('.view-order-details').forEach(button => {
        button.addEventListener('click', (e) => {
            e.preventDefault();
            
            // Sample order data (replace with actual data retrieval)
            const orderData = {
                orderNumber: '12345',
                productImage: '/api/placeholder/250/250',
                productName: 'Stylish Winter Jacket',
                quantity: 1,
                size: 'L',
                price: 2999,
                currentStep: 1,
                trackingSteps: [
                    { title: 'Order Placed', timestamp: '20 Jan 2024, 10:30 AM' },
                    { title: 'Order Confirmed', timestamp: '20 Jan 2024, 11:15 AM' },
                    { title: 'Shipped', timestamp: null },
                    { title: 'Out for Delivery', timestamp: null },
                    { title: 'Delivered', timestamp: null }
                ],
                shippingName: 'John Doe',
                shippingAddress: '123 Main Street',
                shippingCity: 'Cityville',
                shippingState: 'State',
                shippingPincode: '12345',
                shippingPhone: '+91 9876543210',
                trackingNumber: '#TRK987654321',
                courierName: 'SpeedPost Express'
            };

            showOrderDetails(orderData);
        });
    });
});
</script>

