<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>My Orders</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha3/dist/css/bootstrap.min.css" rel="stylesheet">
    <style>
        /* Reuse styles from profile page */
        .breadcrumb a {
            color: #088178;
            text-decoration: none;
        }

        .breadcrumb span {
            margin: 0 10px;
            color: #666;
        }

        .orders-card {
            background: #ffffff;
            border-radius: 12px;
            box-shadow: 0 2px 15px rgba(0, 0, 0, 0.08);
            padding: 30px;
            margin-bottom: 30px;
        }

        .order-item {
            border: 1px solid #e9ecef;
            border-radius: 8px;
            padding: 20px;
            margin-bottom: 20px;
            transition: all 0.3s ease;
        }

        .order-item:hover {
            box-shadow: 0 4px 15px rgba(0, 0, 0, 0.1);
            transform: translateY(-5px);
        }

        .order-status {
            font-weight: 500;
            border-radius: 20px;
            padding: 5px 12px;
            font-size: 0.8rem;
        }

        .order-status.delivered {
            background-color: #d4edda;
            color: #28a745;
        }

        .order-status.pending {
            background-color: #fff3cd;
            color: #ffc107;
        }

        .order-status.cancelled {
            background-color: #f8d7da;
            color: #dc3545;
        }

        .logout-link {
            color: #dc3545;
        }

        .logout-link:hover {
            background-color: #fff5f5;
            color: #dc3545;
        }

        /* Responsive adjustments */
        @media (max-width: 991px) {
            .sidebar {
                position: static;
                margin-bottom: 30px;
            }
        }

        .tracking-timeline {
            position: relative;
            padding-left: 50px;
        }

        .tracking-timeline::before {
            content: '';
            position: absolute;
            left: 0;
            top: 0;
            width: 2px;
            height: 100%;
            background-color: #e9ecef;
        }

        .tracking-item {
            position: relative;
            padding-bottom: 20px;
        }

        .tracking-item::before {
            content: '';
            position: absolute;
            left: -54px;
            top: 0;
            width: 16px;
            height: 16px;
            border-radius: 50%;
            background-color: #888;
        }

        .tracking-item.completed::before {
            background-color: #28a745;
        }

        .tracking-item.pending::before {
            background-color: #ffc107;
        }

        .order-status-badge {
            font-weight: 500;
            border-radius: 20px;
            padding: 5px 12px;
            font-size: 0.8rem;
        }

        .orders-card .card {
            display: flex;
            flex-direction: column;
        }

        .orders-card .card-body {
            display: flex;
            flex-wrap: wrap;
            justify-content: space-between;
        }

        .orders-card .card-body .col-md-4 {
            flex: 0 0 33.333333%;
            max-width: 33.333333%;
            padding: 15px;
        }

        @media (max-width: 767px) {
            .orders-card .card-body .col-md-4 {
                flex: 0 0 50%;
                max-width: 50%;
            }
        }

        @media (max-width: 575px) {
            .orders-card .card-body .col-md-4 {
                flex: 0 0 100%;
                max-width: 100%;
            }
        }

        /* Additional styles for proper alignment and line cap */
        .order-item .row {
            align-items: center;
        }

        .order-item .col-md-2,
        .order-item .col-md-1 {
            display: flex;
            align-items: center;
        }

        .order-item .col-md-2 img {
            margin-right: 10px;
        }

        .order-item .col-md-2 h6,
        .order-item .col-md-2 p {
            margin: 0;
        }

        .order-item .col-md-2:last-child {
            justify-content: flex-end;
        }

        .order-item .order-status {
            margin-right: 10px;
        }

        .order-item .btn {
            white-space: nowrap;
        }

        /* Line cap for more than two products */
        .order-item .product-list {
            display: flex;
            flex-wrap: wrap;
            gap: 10px;
        }

        .order-item .product-list .product-item {
            flex: 1 1 calc(50% - 10px);
            display: flex;
            align-items: center;
        }

        @media (max-width: 767px) {
            .order-item .product-list .product-item {
                flex: 1 1 100%;
            }
        }
    </style>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.7.2/font/bootstrap-icons.css">
</head>
<body>
    <%- include("../../views/partials/user/header") %>

    <div class="container my-4">
        <!-- Breadcrumb -->
        <div class="breadcrumb">
            <a href="/">Home</a>
            <span>/</span>
            <a href="/orders">My Orders</a>
        </div>

        <div class="row mt-4">
            <!-- Sidebar -->
            <%- include("../../views/partials/user/profileSidebar") %>

            <!-- Orders Content -->
            <div class="col-lg-9">
                <div class="orders-card">
                    <h4 class="mb-4">My Orders</h4>

                    <% if (orders && orders.length > 0) { %>
                        <% orders.forEach(function(order) { %>
                            <div class="card mb-3 order-item">
                                <div class="card-body">
                                    <div class="row align-items-center">
                                        <!-- Product List -->
                                        <div class="col-md-8">
                                            <div class="product-list">
                                                <% order.orderedItems.slice(0, 2).forEach(function(item) { %>
                                                    <div class="product-item">
                                                        <img 
                                                            src="/uploads/re-image/<%= item.product.productImage[0] %>" 
                                                            alt="<%= item.product.name %>" 
                                                            class="img-thumbnail" 
                                                            style="width: 80px; height: 80px; object-fit: cover;"
                                                        >
                                                        <div>
                                                            <h6 class="mb-0"><%= item.product.productName %></h6>
                                                            <p class="mb-0">Qty: <%= item.quantity %> | Size: <%= item.size %></p>
                                                        </div>
                                                    </div>
                                                <% }); %>
                                                <% if (order.orderedItems.length > 2) { %>
                                                    <div class="product-item">
                                                        <p class="mb-0 text-muted">+<%= order.orderedItems.length - 2 %> more</p>
                                                    </div>
                                                <% } %>
                                            </div>
                                        </div>

                                        <!-- Price -->
                                        <div class="col-md-2">
                                            <p class="fw-bold mb-0">â‚¹<%= order.finalAmount %></p>
                                        </div>

                                        <!-- Order Status and Details Button -->
                                        <div class="col-md-2 d-flex align-items-center justify-content-end">
                                            <span class="order-status <%= order.status.toLowerCase() %>">
                                                <%= order.status %>
                                            </span>
                                            <a href="/details/<%= order._id %>" class="btn btn-outline-primary btn-sm ms-2">
                                                Details
                                            </a>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        <% }); %>
                    <% } else { %>
                        <div class="alert alert-info">
                            You have no orders yet.
                        </div>
                    <% } %>
                </div>
            </div>
        </div>
    </div>

    <%- include("../../views/partials/user/footer") %>
</body>
</html>