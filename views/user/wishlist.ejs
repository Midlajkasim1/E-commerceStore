<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Wishlist</title>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha3/dist/css/bootstrap.min.css" rel="stylesheet">
  <link href="https://cdn.jsdelivr.net/npm/sweetalert2@11.7.32/dist/sweetalert2.min.css" rel="stylesheet">

  <style>
    .wishlist-banner {
      background: linear-gradient(rgba(17, 18, 18, 0.9), rgba(8, 129, 120, 0.8)), 
                  url('/api/placeholder/1200/300') center/cover;
      padding: 80px 0;
      margin-bottom: 40px;
      position: relative;
    }

    .banner-content {
      text-align: center;
      color: #ffffff;
    }

    .banner-content h1 {
      font-size: 42px;
      font-weight: 700;
      margin-bottom: 15px;
      text-transform: uppercase;
      letter-spacing: 1px;
    }

    .banner-content p {
      font-size: 18px;
      max-width: 600px;
      margin: 0 auto;
      opacity: 0.9;
    }

    .product-card {
      height: 480px;
      border: 1px solid #e9ecef;
      border-radius: 12px;
      padding: 20px;
      text-align: center;
      position: relative;
      background: #fff;
      display: flex;
      flex-direction: column;
      transition: all 0.3s ease;
    }

    .product-card:hover {
      box-shadow: 0 8px 20px rgba(0, 0, 0, 0.1);
      transform: translateY(-5px);
    }

    .product-card img {
      width: 100%;
      height: 220px;
      object-fit: cover;
      border-radius: 8px;
      margin-bottom: 15px;
    }

    .product-card h5 {
      font-size: 16px;
      color: #2c3e50;
      margin: 10px 0;
      height: 72px;
      overflow: hidden;
      display: -webkit-box;
      /* -webkit-line-clamp: 3; */
      -webkit-box-orient: vertical;
      line-height: 1.5;
    }

    .product-card .text-muted {
      font-size: 14px;
      margin: 5px 0;
    }

    .product-card p {
      margin: 5px 0;
      font-weight: 500;
    }

    .remove-wishlist-btn {
      position: absolute;
      top: 15px;
      right: 15px;
      background-color: rgba(237, 247, 247, 0.9);
      padding: 8px;
      border-radius: 50%;
      cursor: pointer;
      border: none;
      transition: all 0.3s ease;
    }

    .remove-wishlist-btn:hover {
      background-color: #ff4444;
      color: white;
    }

    .add-to-cart-btn {
      background-color: #088178;
      color: #fff;
      border: none;
      border-radius: 8px;
      padding: 12px 20px;
      cursor: pointer;
      margin-top: auto;
      transition: all 0.3s ease;
      font-weight: 500;
    }

    .add-to-cart-btn:hover {
      background-color: #066661;
      transform: translateY(-2px);
    }

    .breadcrumb-wrap {
      background: #f8f9fa;
      padding: 15px 0;
      margin-bottom: 30px;
    }

    .breadcrumb {
      margin: 0;
      padding: 0;
      font-size: 14px;
    }

    .breadcrumb a {
      color: #088178;
      text-decoration: none;
    }

    .breadcrumb span {
      margin: 0 10px;
      color: #666;
    }

    @media (max-width: 768px) {
      .wishlist-banner {
        padding: 50px 0;
      }
      
      .banner-content h1 {
        font-size: 32px;
      }
      
      .banner-content p {
        font-size: 16px;
        padding: 0 20px;
      }

      .product-card {
        height: 430px;
      }
      
      .product-card img {
        height: 180px;
      }
      
      .product-card h5 {
        height: 60px;
        font-size: 14px;
      }
    }
    .empty-wishlist {
      text-align: center;
      padding: 50px 20px;
      background: #fff;
      border-radius: 12px;
      box-shadow: 0 2px 15px rgba(0, 0, 0, 0.08);
    }

    .empty-wishlist img {
      max-width: 200px;
      margin-bottom: 30px;
    }

    .empty-wishlist h3 {
      color: #2c3e50;
      margin-bottom: 15px;
      font-weight: 600;
    }

    .empty-wishlist p {
      color: #666;
      margin-bottom: 25px;
    }

    .continue-shopping-btn {
      background-color: #088178;
      color: #fff;
      padding: 12px 30px;
      border-radius: 8px;
      text-decoration: none;
      transition: all 0.3s ease;
      display: inline-block;
    }

    .continue-shopping-btn:hover {
      background-color: #066661;
      color: #fff;
      transform: translateY(-2px);
      text-decoration: none;
    }
      /* Your existing CSS styles */
      .remove-wishlist-btn {
      position: absolute;
      top: 15px;
      right: 15px;
      background-color: rgba(237, 247, 247, 0.9);
      padding: 8px;
      border-radius: 50%;
      cursor: pointer;
      border: none;
      transition: all 0.3s ease;
      font-size: 18px;
      line-height: 1;
      display: flex;
      align-items: center;
      justify-content: center;
      width: 32px;
      height: 32px;
    }

    .remove-wishlist-btn:hover {
      background-color: #ff4444;
      color: white;
      transform: rotate(90deg);
    }
  </style>
</head>
<body>
  <!-- Header will go here -->
  <%-include("../../views/partials/user/header")%>
  <div class="container my-4">
    <div class="breadcrumb">
      <a href="/">Home</a>
      <span>/</span>
      <a href="/wishlist">Wishlist</a>
    </div>

    <div class="wishlist-banner">
      <div class="container">
        <div class="banner-content">
          <h1>My Wishlist</h1>
          <p>Your favorite items saved in one place</p>
        </div>
      </div>
    </div>

    <main>
      <div class="row g-4" id="wishlist-container">
        <%if(wishlist.length>0){%>
            <%for(let product of wishlist ){%>
                <div class="col-md-4" id="product-<%=product._id%>">
                  <div class="product-card">
                    <button class="remove-wishlist-btn" onclick="confirmRemove('<%=product._id%>')">×</button>
                    <a href="#">
                      <img src="/uploads/re-image/<%=product.productImage[0]%>" alt="Product Name" class="img-fluid rounded">
                    </a>
                    <h5 class="mt-3"><%=product.productName%></h5>
                    <p class="text-muted"><strike>₹<%=product.salePrice%></strike></p>
                    <p>₹<%=product.regularPrice%></p>
                    <span class="category-badge"><%=product.category.name%></span>
                    <form action="/addToCart/<%= product._id %>" method="POST" class="add-to-cart-form">
                      <button type="submit" class="add-to-cart-btn w-100">Add to Cart</button>
                    </form>                     </div>
                </div>
              <%}%>
        <%} else {%>
          <div class="col-12">
            <div class="empty-wishlist">
              <img src="/images/wishlist-empty.webp" alt="Empty Wishlist" class="img-fluid">
              <h3>Your Wishlist is Empty</h3>
              <p>Add items that you like to your wishlist and they will show up here</p>
              <a href="/shop" class="continue-shopping-btn">
                Continue Shopping
              </a>
            </div>
          </div>
        <%}%>
      </div>
    </main>
  </div>

  <!-- Footer will go here -->
  <%-include("../../views/partials/user/footer")%>

  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha3/dist/js/bootstrap.bundle.min.js"></script>
  <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
  <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
  <script>
    function confirmRemove(productId) {
      Swal.fire({
        title: 'Remove from Wishlist?',
        text: 'Are you sure you want to remove this product from your wishlist?',
        icon: 'warning',
        showCancelButton: true,
        confirmButtonColor: '#3085d6',
        cancelButtonColor: '#d33',
        confirmButtonText: 'Yes, remove it!',
        cancelButtonText: 'Cancel',
      }).then((result) => {
        if (result.isConfirmed) {
          // Send AJAX request to remove the product
          $.ajax({
            url: `/removeFromWishlist?productId=${productId}`,
            method: 'GET',
            success: function (response) {
              if (response.status) {
                // Remove the product card from the DOM
                $(`#product-${productId}`).fadeOut(300, function () {
                  $(this).remove();
                  // Show success message
                  Swal.fire({
                    title: 'Removed!',
                    text: 'The product has been removed from your wishlist.',
                    icon: 'success',
                    confirmButtonColor: '#3085d6',
                  });

                  // If the wishlist is empty, show the empty wishlist message
                  if ($('#wishlist-container').children().length === 0) {
                    $('#wishlist-container').html(`
                      <div class="col-12">
                        <div class="empty-wishlist">
                          <img src="/api/placeholder/200/200" alt="Empty Wishlist" class="img-fluid">
                          <h3>Your Wishlist is Empty</h3>
                          <p>Add items that you like to your wishlist and they will show up here</p>
                          <a href="/shop" class="continue-shopping-btn">
                            Continue Shopping
                          </a>
                        </div>
                      </div>
                    `);
                  }
                });
              } else {
                Swal.fire({
                  title: 'Error!',
                  text: 'Failed to remove the product from your wishlist.',
                  icon: 'error',
                  confirmButtonColor: '#3085d6',
                });
              }
            },
            error: function () {
              Swal.fire({
                title: 'Error!',
                text: 'Something went wrong. Please try again later.',
                icon: 'error',
                confirmButtonColor: '#3085d6',
              });
            },
          });
        }
      });
    }
  </script>
</body>
</html>