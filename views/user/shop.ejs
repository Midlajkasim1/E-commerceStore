<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Shop Page</title>
    <link href="https://cdn.jsdelivr.net/npm/sweetalert2@11.7.32/dist/sweetalert2.min.css" rel="stylesheet">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha3/dist/css/bootstrap.min.css" rel="stylesheet">
    <style>
        /* Custom styles */
        .search-form {
            display: flex;
            align-items: center;
            background-color: #f1f1f1;
            border-radius: 25px;
            max-width: 250px;
            box-shadow: 0px 4px 8px rgba(0, 0, 0, 0.1);
        }

        .search-input {
            flex: 1;
            padding: 8px 10px;
            border: none;
            outline: none;
            background-color: transparent;
        }

        .search-button {
            padding: 8px 15px;
            background-color: #1e918b;
            color: #fff;
            border: none;
            border-radius: 15px;
            transition: background-color 0.3s, transform 0.2s;
        }

        .search-button:hover {
            background-color: #0056b3;
            transform: scale(1.05);
        }

        .breadcrumb-wrap {
            background: var(--light-gray);
            padding: 15px 0;
            margin-bottom: 50px;
        }

        .breadcrumb {
            margin: 0;
            padding: 0;
            font-size: 14px;
        }

        .breadcrumb a {
            color: var(--primary-color);
            text-decoration: none;
        }

        .breadcrumb span {
            margin: 0 10px;
            color: #666;
        }

        /* Enhanced Sidebar Styles */
        aside {
            position: sticky;
            top: 20px;
        }

        /* Category Section */
        .border.rounded {
            background: #ffffff;
            box-shadow: 0 2px 15px rgba(0, 0, 0, 0.08);
            border: none !important;
            transition: transform 0.3s ease;
        }

        .border.rounded:hover {
            transform: translateY(-5px);
        }

        /* Category Title */
        .border.rounded h5 {
            color: #2c3e50;
            font-weight: 600;
            padding-bottom: 10px;
            border-bottom: 2px solid #088178;
            margin-bottom: 15px;
        }

        /* Category List */
        .list-styled {
            list-style: none;
            padding: 0;
            margin: 0;
        }

        .list-styled li {
            margin-bottom: 12px;
            transition: all 0.3s ease;
        }

        .list-styled li a {
            display: block;
            padding: 8px 15px;
            border-radius: 6px;
            transition: all 0.3s ease;
            position: relative;
        }

        .list-styled li a:hover {
            background-color: #f8f9fa;
            color: #088178 !important;
            padding-left: 20px;
        }

        .list-styled li a::after {
            content: '→';
            position: absolute;
            right: 15px;
            opacity: 0;
            transition: opacity 0.3s ease;
        }

        .list-styled li a:hover::after {
            opacity: 1;
        }

        /* Price Filter Section */
        .price-button {
            background-color: #ffffff;
            color: #2c3e50;
            border: 1px solid #e9ecef !important;
            border-radius: 8px !important;
            padding: 12px 20px !important;
            font-weight: 500;
            transition: all 0.3s ease;
            position: relative;
            overflow: hidden;
            z-index: 1;
        }

        .price-button::before {
            content: '';
            position: absolute;
            top: 0;
            left: -100%;
            width: 100%;
            height: 100%;
            background: linear-gradient(90deg, #088178, #0aa69f);
            transition: left 0.3s ease;
            z-index: -1;
        }

        .price-button:hover {
            color: #ffffff !important;
            border-color: transparent !important;
            transform: translateY(-2px);
            box-shadow: 0 5px 15px rgba(8, 129, 120, 0.2);
        }

        .price-button:hover::before {
            left: 0;
        }

        /* Responsive adjustments */
        @media (max-width: 991px) {
            aside {
                position: static;
                margin-bottom: 30px;
            }

            .border.rounded {
                margin-bottom: 20px;
            }
        }

        .wishlist-btn {
            position: absolute;
            top: 15px;
            right: 15px;
            background-color: rgba(237, 247, 247, 0.9);
            padding: 8px;
            border-radius: 50%;
            cursor: pointer;
            z-index: 1;
        }

        .product-card {
            height: 480px;
            /* Increased height to accommodate longer titles */
            border: 1px solid #e9ecef;
            border-radius: 12px;
            padding: 20px;
            text-align: center;
            position: relative;
            background: #fff;
            display: flex;
            flex-direction: column;
            transition: all 0.3s ease;
        }

        .product-card:hover {
            box-shadow: 0 8px 20px rgba(0, 0, 0, 0.1);
            transform: translateY(-5px);
        }

        .product-card img {
            width: 100%;
            height: 220px;
            object-fit: cover;
            border-radius: 8px;
            margin-bottom: 15px;
        }

        .product-card h5 {
            font-size: 16px;
            color: #2c3e50;
            margin: 10px 0;
            height: 72px;
            /* Increased height for 3 lines */
            overflow: hidden;
            display: -webkit-box;
            -webkit-line-clamp: 3;
            /* Changed to show 3 lines */
            -webkit-box-orient: vertical;
            line-height: 1.5;
            /* Better readability */
        }

        .product-card .text-muted {
            font-size: 14px;
            margin: 5px 0;
        }

        .product-card p {
            margin: 5px 0;
            font-weight: 500;
        }

        .add-to-cart-btn {
            background-color: #088178;
            color: #fff;
            border: none;
            border-radius: 8px;
            padding: 12px 20px;
            cursor: pointer;
            margin-top: auto;
            /* Pushes button to bottom */
            transition: all 0.3s ease;
            font-weight: 500;
        }

        .add-to-cart-btn:hover {
            background-color: #066661;
            transform: translateY(-2px);
        }

        /* Responsive adjustment */
        @media (max-width: 768px) {
            .product-card {
                height: 430px;
            }

            .product-card img {
                height: 180px;
            }

            .product-card h5 {
                height: 60px;
                font-size: 14px;
            }
        }

        .price-button {
            background-color: #f1f1f1;
            color: #333;
            border: 1px solid #ddd;
            border-radius: 30px;
            padding: 10px 20px;
            cursor: pointer;
            text-align: center;
            font-size: 14px;
            transition: background-color 0.3s, transform 0.2s;
        }

        .price-button:hover {
            background-color: #007bff;
            color: #fff;
            transform: scale(1.05);
        }

        .shop-banner {
            background: linear-gradient(rgba(17, 18, 18, 0.9), rgba(8, 129, 120, 0.8)),
                url('/api/placeholder/1200/300') center/cover;
            padding: 80px 0;
            margin-bottom: 40px;
            position: relative;
        }

        .banner-content {
            text-align: center;
            color: #ffffff;
        }

        .banner-content h1 {
            font-size: 42px;
            font-weight: 700;
            margin-bottom: 15px;
            text-transform: uppercase;
            letter-spacing: 1px;
        }

        .banner-content p {
            font-size: 18px;
            max-width: 600px;
            margin: 0 auto;
            opacity: 0.9;
        }

        /* Responsive adjustments */
        @media (max-width: 768px) {
            .shop-banner {
                padding: 50px 0;
            }

            .banner-content h1 {
                font-size: 32px;
            }

            .banner-content p {
                font-size: 16px;
                padding: 0 20px;
            }
        }

        /* Previous styles remain the same */
        .sorting-container {
            margin-bottom: 20px;
            width: 100%;
        }

        .custom-select-wrapper {
            position: relative;
            width: 100%;
            margin-top: 25px;
        }

        .custom-select {
            appearance: none;
            -webkit-appearance: none;
            width: 100%;
            padding: 12px 35px 12px 15px;
            border: 1px solid #e0e0e0;
            border-radius: 8px;
            background-color: #fff;
            font-size: 14px;
            color: #333;
            cursor: pointer;
            transition: all 0.3s ease;
            margin-bottom: 20px;
        }

        .custom-select:hover {
            border-color: #088178;
        }

        .custom-select:focus {
            outline: none;
            border-color: #088178;
            box-shadow: 0 0 0 2px rgba(8, 129, 120, 0.1);
        }

        .custom-select-wrapper::after {
            /* content: '↓'; */
            position: absolute;
            right: 15px;
            top: 50%;
            transform: translateY(-50%);
            color: #088178;
            pointer-events: none;
        }
        .offer-badge {
    background-color: red;
    color: white;
    padding: 3px 8px;
    font-size: 12px;
    font-weight: bold;
    border-radius: 4px;
}
    </style>
</head>

<body>

  <%-include("../../views/partials/user/header")%>

        <div class="container my-4">
            <div class="breadcrumb">
                <a href="/">Home</a>
                <span>/</span>
                <a href="/shop">Shop</a>

            </div>
            <div class="shop-banner">
                <div class="container">
                    <div class="banner-content">
                        <h1>Our Collection</h1>
                        <p>Discover our curated selection of premium products</p>
                    </div>
                </div>
            </div>

            <!-- Search Bar -->
            <div class="d-flex justify-content-between align-items-center mb-4">
                <form action="/shop" method="GET" class="search-form">
                    <input type="text" name="query" placeholder="Search items..." value="<%= search || '' %>"
                        class="search-input" />
                    <input type="hidden" name="category" value="<%= selectedCategory || '' %>" />
                    <button type="submit" class="search-button">Search</button>
                </form>
            </div>

            <div class="row">
                <!-- Sidebar -->
                <aside class="col-lg-3 mb-4">
                    <div class="p-3 border rounded">
                        <h5 class="mb-3">Categories</h5>
                        <ul class="list-styled">
                            <% categories.forEach(cat=> { %>
                                <li>
                                    <a href="/shop?category=<%= cat._id %>"
                                        class="text-decoration-none text-dark <%= selectedCategory === cat._id.toString() ? 'active' : '' %>">
                                        <%= cat.name %>
                                        
                                    <% if (cat.categoryOffer > 0) { %>
                                        <span class="offer-badge"><%= cat.categoryOffer %>% OFF</span>
                                    <% } %>
                                    </a>
                                </li>
                                <% }) %>
                        </ul>
                    </div>

                    <div class="p-3 border rounded mt-4">
                        <h5 class="mb-3">Filter by Price</h5>
                        <a href="/shop?gt=0&lt=500&category=<%= selectedCategory || '' %>">
                            <button type="button" class="price-button w-100 mb-2">Under ₹500</button>
                        </a>
                        <a href="/shop?gt=500&lt=1000&category=<%= selectedCategory || '' %>">
                            <button type="button" class="price-button w-100 mb-2">₹500 - ₹1000</button>
                        </a>
                        <a href="/shop?gt=1000&lt=1500&category=<%= selectedCategory || '' %>">
                            <button type="button" class="price-button w-100 mb-2">₹1000 - ₹1500</button>
                        </a>
                        <a href="/shop?gt=1500&lt=1000000&category=<%= selectedCategory || '' %>">
                            <button type="button" class="price-button w-100">Above ₹1500</button>
                        </a>
                    </div>
                    <div class="sorting-container">
                        <div class="custom-select-wrapper">
                            <select class="custom-select" id="sortSelect" onchange="handleSort(this.value)">
                                <option value="default" <%=currentSort==='default' ? 'selected' : '' %>>Sort By</option>
                                <option value="priceHighToLow" <%=currentSort==='priceHighToLow' ? 'selected' : '' %>
                                    >Price: High to Low</option>
                                <option value="priceLowToHigh" <%=currentSort==='priceLowToHigh' ? 'selected' : '' %>
                                    >Price: Low to High</option>
                                <option value="nameAtoZ" <%=currentSort==='nameAtoZ' ? 'selected' : '' %>>Name: A to Z
                                </option>
                                <option value="nameZtoA" <%=currentSort==='nameZtoA' ? 'selected' : '' %>>Name: Z to A
                                </option>
                            </select>
                        </div>
                    </div>
                </aside>

                <!-- Product Grid -->
                <main class="col-lg-9">
                    <% if (products.length===0) { %>
                        <div class="alert alert-info" role="alert">
                            No products found. Try adjusting your search or filters.
                        </div>
                        <% } else { %>
                            <div class="row g-4">
                                <% for(let i=0; i < products.length; i++) { %>
                                    <div class="col-md-4">
                                        <div class="product-card">
                                            <span class="wishlist-btn"
                                                onclick="addToWishlist('<%=products[i]._id%>')">❤️</span>
                                            <a href="/productDetails?id=<%=products[i]._id%>">
                                                <img src="/uploads/re-image/<%= products[i].productImage[0] %>"
                                                    alt="<%= products[i].productName %>" class="img-fluid rounded"></a>
                                            <h5 class="mt-3">
                                                <%= products[i].productName %>
                                            </h5>
                                            <p class="text-muted"><strike>₹<%=
                                                        products[i].regularPrice.toLocaleString('en-IN') %></strike></p>
                                            <p>₹<%= products[i].salePrice.toLocaleString('en-IN') %>
                                            </p>
                                            <form action="/addToCart/<%= products[i]._id %>" method="POST"
                                                class="add-to-cart-form">
                                                <button type="submit" class="add-to-cart-btn w-100">Add to Cart</button>
                                            </form>
                                        </div>
                                    </div>
                                    <% } %>
                            </div>
                            <% } %>
                </main>

            </div>

            <!-- Pagination -->
            <div class="pagination">
                <% if (currentPage> 1) { %>
                    <a class="btn"
                        href="?page=<%= currentPage - 1 %>&category=<%= selectedCategory %>&sort=<%= currentSort %>&gt=<%= gt || 0 %>&lt=<%= lt || 1000000 %>">Prev</a>
                    <% } %>

                        <% for (let i=1; i <=totalPages; i++) { %>
                            <a class="btn <%= currentPage === i ? 'active' : '' %>"
                                href="?page=<%= i %>&category=<%= selectedCategory %>&sort=<%= currentSort %>&gt=<%= gt || 0 %>&lt=<%= lt || 1000000 %>">
                                <%= i %>
                            </a>
                            <% } %>

                                <% if (currentPage < totalPages) { %>
                                    <a class="btn"
                                        href="?page=<%= currentPage + 1 %>&category=<%= selectedCategory %>&sort=<%= currentSort %>&gt=<%= gt || 0 %>&lt=<%= lt || 1000000 %>">Next</a>
                                    <% } %>
            </div>
        </div>
        <%-include("../../views/partials/user/footer")%>

            <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha3/dist/js/bootstrap.bundle.min.js"></script>
            <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
                        <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>


            <script>
                function handleSort(sortOption) {
                    const urlParams = new URLSearchParams(window.location.search);
                    urlParams.set("sort", sortOption);
                    window.location.href = `${window.location.pathname}?${urlParams.toString()}`;
                }

                // Set selected sort option based on URL
                function setSelectedSort() {
                    const urlParams = new URLSearchParams(window.location.search);
                    const currentSort = urlParams.get("sort");
                    if (currentSort) {
                        document.getElementById("sortSelect").value = currentSort;
                    }
                }

                // Call this when page loads
                document.addEventListener("DOMContentLoaded", setSelectedSort);
                // Add to cart functionality
                document.querySelectorAll('.add-to-cart-btn').forEach(button => {
                    button.addEventListener('click', function () {
                        alert('Item added to cart!');
                    });
                });
                //

                function addToWishlist(productId) {
                    $.ajax({
                        url: '/addToWishlist',
                        method: 'POST',
                        data: { productId: productId },
                        success: (response) => {
                            if (response.status) {
                                Swal.fire({
                                    title: 'Added to wishlist',
                                    text: 'The product has been added to your wishlist',
                                    icon: 'success',
                                    timer: 2000
                                })
                            } else {
                                Swal.fire({
                                    title: 'Already in wishlist',
                                    text: response.message,
                                    icon: 'info',
                                    timer: 2000

                                })
                            }
                        },
                        error: (error) => {
                            Swal.fire({
                                title: 'Error',
                                text: 'There was an error adding the product to your wishlist',
                                icon: 'error',
                                timer: 2000
                            })
                        }

                    })

                }

            </script>
</body>

</html>