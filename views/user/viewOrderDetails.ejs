        /* Tracking Progress Styles */
        .tracking-progress {
            display: flex;
            justify-content: space-between;
            align-items: center;
            margin: 20px 0;
            padding: 10px;
            background: #f8f9fa;
            border-radius: 8px;
        }

        .tracking-step {
            text-align: center;
            flex: 1;
            position: relative;
        }

        .tracking-step.completed .icon {
            background-color: #28a745;
            color: white;
        }

        .tracking-step.active .icon {
            background-color: #ffc107;
            color: white;
        }

        .tracking-step .icon {
            width: 30px;
            height: 30px;
            border-radius: 50%;
            background-color: #e9ecef;
            display: flex;
            align-items: center;
            justify-content: center;
            margin: 0 auto 10px;
        }

        .tracking-step p {
            margin: 0;
            font-size: 0.9rem;
            color: #666;
        }

        .tracking-line {
            flex: 1;
            height: 2px;
            background-color: #e9ecef;
            margin: 0 10px;
        }

        .tracking-line.completed {
            background-color: #28a745;
        }

        .order-item {
            border: 1px solid #e9ecef;
            border-radius: 8px;
            padding: 20px;
            margin-bottom: 20px;
        }

