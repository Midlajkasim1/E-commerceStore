<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Product Details</title>
    <link href="https://cdnjs.cloudflare.com/ajax/libs/bootstrap/5.3.2/css/bootstrap.min.css" rel="stylesheet">
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css" rel="stylesheet">
    <style>
        :root {
            --primary-color: #3a3a3a;
            --secondary-color: #088178;
            --light-gray: #f8f8f8;
        }
        
        body {
            font-family: 'Inter', sans-serif;
            color: var(--primary-color);
        }

        .breadcrumb-wrap {
            background: var(--light-gray);
            padding: 15px 0;
            margin-bottom: 50px;
        }

        .breadcrumb {
            margin: 0;
            padding: 0;
            font-size: 14px;
        }

        .breadcrumb a {
            color: var(--primary-color);
            text-decoration: none;
        }

        .breadcrumb span {
            margin: 0 10px;
            color: #666;
        }

        /* Enhanced Product Gallery */
        .product-gallery {
            position: relative;
            margin-bottom: 30px;
        }

        .product-image-container {
            position: relative;
            overflow: hidden;
            border-radius: 10px;
            cursor: zoom-in;
            background-color: #fff;
            border: 1px solid #eee;
        }

        .product-image-slider img {
            width: 100%;
            height: 500px;
            border-radius: 10px;
            object-fit: contain;
            transition: transform 0.3s ease;
        }

        .product-image-container:hover .product-image-slider img {
            transform: scale(1.5);
        }

        /* Enhanced Thumbnail Navigation */
        .slider-nav-thumbnails {
            display: grid;
            grid-template-columns: repeat(5, 1fr);
            gap: 10px;
            margin-top: 20px;
        }

        .slider-nav-thumbnails img {
            width: 100%;
            height: 80px;
            object-fit: cover;
            border-radius: 5px;
            cursor: pointer;
            border: 2px solid transparent;
            transition: all 0.3s ease;
            opacity: 0.7;
        }

        .slider-nav-thumbnails img:hover {
            border-color: var(--secondary-color);
            opacity: 1;
        }

        .slider-nav-thumbnails img.active {
            border-color: var(--secondary-color);
            opacity: 1;
        }

     /* Main Container for Product Details */
.product-detail {
    padding: 20px;
    background-color: #fff;
    border-radius: 10px;
    box-shadow: 0 4px 10px rgba(0, 0, 0, 0.1);
}

/* Product Title */
.product-title {
    font-size: 26px;  /* Slightly smaller font size */
    font-weight: 600;
    color: var(--primary-color);
    margin-bottom: 15px;
    line-height: 1.3;
}

/* Product Meta (Rating) */
.product-meta {
    display: flex;
    align-items: center;
    gap: 15px;
    margin-bottom: 15px;  /* Reduced margin */
}

.product-rating {
    display: flex;
    align-items: center;
    gap: 5px;
}

.product-rating i {
    color: #ffd700;
}

.product-rating span {
    color: #666;
    font-size: 14px;
}

/* Price Section */
.product-price {
    display: flex;
    align-items: center;
    gap: 15px;
    margin-bottom: 15px;  /* Reduced margin */
}

.current-price {
    font-size: 28px;
    font-weight: 600;
    color: var(--secondary-color);
}

.old-price {
    text-decoration: line-through;
    color: #888;
    font-size: 20px;
}

.save-price {
    background-color: #ff4949;
    color: white;
    padding: 5px 15px;
    font-weight: 500;
    border-radius: 4px;
    font-size: 14px;
}

/* Product Description */
.product-description {
    margin-bottom: 20px;  /* Reduced margin */
}

.product-description h4 {
    font-size: 18px;
    font-weight: 600;
    color: var(--primary-color);
    margin-bottom: 10px;
}

.product-description p {
    color: #666;
    font-size: 16px;
    line-height: 1.6;
}

/* Product Features (Info) */
.product-info {
    background: #f8f8f8;
    padding: 15px;  /* Slightly reduced padding */
    border-radius: 8px;
    margin-bottom: 20px;  /* Reduced margin */
}

.product-info ul {
    list-style: none;
    padding: 0;
    margin: 0;
}

.product-info li {
    display: flex;
    align-items: center;
    gap: 10px;
    margin-bottom: 8px;  /* Reduced margin */
    font-size: 14px;
    color: #666;
}

.product-info i {
    color: var(--secondary-color);
    font-size: 16px;
}

/* Product Quantity and Cart Button */
.detail-extralink {
    display: flex;
    gap: 15px;  /* Adjusted gap */
    flex-direction: row;  /* Changed to row */
    align-items: center;
}

.detail-qty {
    display: flex;
    align-items: center;
    gap: 10px;
    border: 1px solid #e5e5e5;
    border-radius: 5px;
    padding: 5px 10px;
    background-color: #fff;
    font-size: 18px;  /* Increased font size for better visibility */
}

.detail-qty a {
    font-size: 20px;
    color: var(--primary-color);
    cursor: pointer;
}

.qty-val {
    font-size: 18px;
    font-weight: 500;
    color: #333;
}

/* Add to Cart Button */
.button-add-to-cart {
    background-color: var(--secondary-color);
    color: white;
    font-size: 16px;
    padding: 12px 20px;
    border: none;
    border-radius: 5px;
    cursor: pointer;
    display: flex;
    align-items: center;
    justify-content: center;
    gap: 10px;
    transition: background-color 0.3s;
}

.button-add-to-cart:hover {
    background-color: #066c64;
}

/* Wishlist Button (Moved to the Right) */
.product-extra-link2 {
    display: flex;
    align-items: center;
    gap: 15px;  /* Ensures space between the cart button and wishlist icon */
}

.action-btn {
    width: 45px;
    height: 45px;
    background-color: #fff;
    border-radius: 50%;
    border: 1px solid #e5e5e5;
    color: var(--primary-color);
    display: flex;
    align-items: center;
    justify-content: center;
    cursor: pointer;
    transition: all 0.3s;
}

.action-btn:hover {
    background-color: var(--secondary-color);
    color: white;
    border-color: var(--secondary-color);
}

/* Product Stock Status */
.product-detail-meta {
    margin-top: 20px;
    padding-top: 15px;
    border-top: 1px solid #eee;
}

.product-detail-meta ul {
    list-style: none;
    padding: 0;
    margin: 0;
}

.product-detail-meta li {
    display: flex;
    align-items: center;
    gap: 10px;
    font-size: 14px;
    color: #666;
}

.meta-label {
    font-weight: 600;
    color: var(--primary-color);
}

.stock-status {
    display: flex;
    align-items: center;
    gap: 5px;
}

.stock-status.in-stock {
    color: #22c55e;
}

.stock-status.out-of-stock {
    color: #ef4444;
}

/* Category Tags */
.tag-list a {
    background-color: #f5f5f5;
    color: #666;
    padding: 5px 15px;
    border-radius: 4px;
    text-decoration: none;
    font-size: 14px;
    transition: background-color 0.3s;
}

.tag-list a:hover {
    background-color: var(--secondary-color);
    color: white;
}

/* Responsive Adjustments */
@media (max-width: 768px) {
    .product-price {
        flex-wrap: wrap;
    }

    .button-add-to-cart {
        width: 100%;
    }

    .detail-extralink {
        gap: 10px;
        flex-direction: column;
    }
}

@media (max-width: 576px) {
    .product-title {
        font-size: 24px;
    }

    .current-price {
        font-size: 28px;
    }

    .product-meta {
        flex-direction: column;
    }

    .button-add-to-cart {
        font-size: 14px;
    }

    .qty-val {
        font-size: 16px;
    }
}

    </style>
</head>
<body>
    <%-include("../../views/partials/user/header")%>

    <div class="page-header breadcrumb-wrap">
        <div class="container">
            <div class="breadcrumb">
                <a href="/">Home</a>
                <span>/</span>
                <a href="/shop">Shop</a>
                <span>/</span>
                Product Details
            </div>
        </div>
    </div>

    <div class="container">
        <div class="row">
            <div class="col-md-6">
                <div class="product-gallery">
                    <div class="product-image-container">
                        <div class="product-image-slider">
                            <img src="/uploads/re-image/<%=product.productImage[0]%>" alt="<%=product.productName%>">
                        </div>
                    </div>
                    <div class="slider-nav-thumbnails">
                        <%for(let i=0; i<product.productImage.length; i++){%>
                            <img src="/uploads/re-image/<%=product.productImage[i]%>" 
                                 alt="<%=product.productName%> thumbnail" 
                                 class="<%=i === 0 ? 'active' : ''%>">
                        <%}%>
                    </div>
                </div>
            </div>
            
            <div class="col-md-6">
                <div class="product-detail">
                    <h1 class="product-title"><%=product.productName%></h1>
                    
                    <div class="product-meta">
                        <div class="product-rating">
                            <i class="fas fa-star"></i>
                            <i class="fas fa-star"></i>
                            <i class="fas fa-star"></i>
                            <i class="fas fa-star"></i>
                            <i class="fas fa-star-half-alt"></i>
                            <span>(25 reviews)</span>
                        </div>
                    </div>

                    <div class="product-price">
                        <span class="current-price">₹<%=product.salePrice%></span>
                        <span class="old-price">₹<%=product.regularPrice%></span>
                        <span class="save-price">
                            <%if(!totalOffer){%>
                                No Offers
                            <%}else{%>
                                <%=totalOffer%>% Off
                            <%}%>
                        </span>
                    </div>

                    <div class="product-description">
                        <h4>Description</h4>
                        <p><%=product.description%></p>
                    </div>

                    <div class="product-info">
                        <ul>
                            <li><i class="fas fa-check-circle"></i> 100% Cotton</li>
                            <li><i class="fas fa-check-circle"></i> Made in India</li>
                            <li><i class="fas fa-check-circle"></i> Regular fit</li>
                            <li><i class="fas fa-truck"></i> Free Shipping</li>
                            <li><i class="fas fa-undo"></i> 30-Day Returns</li>
                        </ul>
                    </div>

                    <div class="detail-extralink">
                        <div class="detail-qty">
                            <a class="qty-down"><i class="fas fa-minus"></i></a>
                            <span class="qty-val">1</span>
                            <a class="qty-up"><i class="fas fa-plus"></i></a>
                        </div>
                        <div class="product-extra-link2">
                            <button type="submit" class="button-add-to-cart">
                                <i class="fas fa-shopping-cart"></i>
                                Add to cart
                            </button>
                            <a href="#" class="action-btn">
                                <i class="far fa-heart"></i>
                            </a>
                        </div>
                    </div>

                    <div class="product-detail-meta">
                        <ul>
                            <li>
                                <span class="meta-label">Stock:</span>
                                <span class="stock-status <%=quantity > 0 ? 'in-stock' : 'out-of-stock'%>">
                                    <i class="fas <%=quantity > 0 ? 'fa-check-circle' : 'fa-times-circle'%>"></i>
                                    <span class="text-success"><%=quantity%> Items in Stock</span>
                                </span>
                            </li>
                            <li>
                                <span class="meta-label">Category:</span>
                                <div class="tag-list">
                                    <a class="text-decoration-none" href="#"><%=category.name%></a>
                                </div>
                            </li>
                        </ul>
                    </div>
                </div>
            </div>
        </div>
            <!-- Others Also Bought Section -->
            <div class="others-bought">
                <div class="section-title">
                    <h2>Others Also Bought</h2>
                </div>
                <div class="container ">
                    <div class="row g-4">
                        <% for(let i=0;i<ranNum.length;i++){ %>
                          <div class="col-md-4">
                            <div class="product-card">
                              <span class="wishlist-btn">❤️</span>
                              <a href="/productDetails?id=<%=allProducts[i]._id%>">
                              <img src="/uploads/re-image/<%= allProducts[i].productImage[0] %>" alt="<%= allProducts[i].productName %>" class="img-fluid rounded"></a>
                              <h5 class="mt-3"><%= allProducts[i].productName %></h5>
                              <p class="text-muted"><strike>₹<%= allProducts[i].regularPrice.toLocaleString('en-IN') %></strike></p>
                              <p>₹<%= allProducts[i].salePrice.toLocaleString('en-IN') %></p>
                              <button class="add-to-cart-btn w-100">Add to Cart</button>
                            </div>
                          </div>
                        <% } %>
                      </div>
                </div>
            </div>
    </div>

    <%-include("../../views/partials/user/footer")%>
    <script>
      
    document.addEventListener('DOMContentLoaded', function() {
        // Image Gallery and Zoom Functionality
        const mainImage = document.querySelector('.product-image-slider img');
        const thumbnails = document.querySelectorAll('.slider-nav-thumbnails img');
        const imageContainer = document.querySelector('.product-image-container');

        // Initialize first thumbnail as active
        if (thumbnails.length > 0) {
            thumbnails[0].classList.add('active');
        }

        // Thumbnail click handling
        thumbnails.forEach(thumbnail => {
            thumbnail.addEventListener('click', function() {
                // Update main image
                mainImage.src = this.src;
                
                // Update active state
                thumbnails.forEach(thumb => thumb.classList.remove('active'));
                this.classList.add('active');

                // Reset zoom transform
                mainImage.style.transform = 'scale(1)';
                mainImage.style.transformOrigin = 'center center';
            });
        });

        // Image zoom handling
        if (imageContainer) {
            let isZoomed = false;

            imageContainer.addEventListener('mousemove', function(e) {
                if (!isZoomed) return;

                const { left, top, width, height } = this.getBoundingClientRect();
                const x = (e.clientX - left) / width;
                const y = (e.clientY - top) / height;

                mainImage.style.transformOrigin = `${x * 100}% ${y * 100}%`;
            });

            imageContainer.addEventListener('mouseenter', function() {
                isZoomed = true;
                mainImage.style.transform = 'scale(1.5)';
            });

            imageContainer.addEventListener('mouseleave', function() {
                isZoomed = false;
                mainImage.style.transform = 'scale(1)';
                mainImage.style.transformOrigin = 'center center';
            });

            // Add touch support for mobile devices
            let touchTimeout;
            imageContainer.addEventListener('touchstart', function() {
                touchTimeout = setTimeout(() => {
                    isZoomed = !isZoomed;
                    mainImage.style.transform = isZoomed ? 'scale(1.5)' : 'scale(1)';
                }, 200);
            });

            imageContainer.addEventListener('touchend', function() {
                clearTimeout(touchTimeout);
            });

            imageContainer.addEventListener('touchmove', function(e) {
                if (!isZoomed) return;
                
                const touch = e.touches[0];
                const { left, top, width, height } = this.getBoundingClientRect();
                const x = (touch.clientX - left) / width;
                const y = (touch.clientY - top) / height;

                mainImage.style.transformOrigin = `${x * 100}% ${y * 100}%`;
                e.preventDefault(); // Prevent page scrolling while zoomed
            });
        }

     });
     
     document.querySelector('.qty-up').addEventListener('click', function(e) {
            e.preventDefault();
            let val = parseInt(document.querySelector('.qty-val').textContent);
            document.querySelector('.qty-val').textContent = val + 1;
        });

        document.querySelector('.qty-down').addEventListener('click', function(e) {
            e.preventDefault();
            let val = parseInt(document.querySelector('.qty-val').textContent);
            if (val > 1) {
                document.querySelector('.qty-val').textContent = val - 1;
            }
        });
</script>
  